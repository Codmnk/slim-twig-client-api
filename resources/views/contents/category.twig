{% extends 'layouts/homeLayout.twig' %}

{% block content %}

<style> 
    .questions{ 
        background-color:black; 
        padding: 10px; 
        display:block; 
        margin-bottom: 10px;
        font-size: 24px;
        font-weight: bolder;
        text-decoration:none;
        cursor: pointer;
    }
    .answer{
        padding-left:30px; 
        margin-top: -10px;  
        background-color:rgb(24, 23, 23);
    }
</style>

<div class="" style="background-color:#2c2c32;">
    <div class="container">
        <div class="row"> <p style="margin:30px;"></p> </div>
            <div >
                {% if qnaData %}
                
                    {% for key, item in qnaData %}
                
                        <a data-toggle="collapse" data-target="#collapseAns{{ key }}" class="questions">{{ item.question }}</a>
                        
                        <div id="collapseAns{{ key }}" class="answer collapse">
                                {% autoescape %}
                                    {{ item.answer|raw }}
                                {% endautoescape %}
                        </div>
                    {% endfor %}
                {% else %}
                    <div> <h4>No records foune! Please try again later.</h4></div>
                {% endif %}

                
        
            </div>
            
    </div>
</div>

{% endblock %}