<div class="container">
    <div class="row">

        {{#if success_message}}
        <div class="alert alert-success">
            {{success_message}}
        </div>
        {{/if}} {{#if error}}
        <div class="alert alert-danger">
            {{error}}
        </div>
        {{/if}}


        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>

            <div class="card-body">
                <div id="card-body">
                    <form action="/hc/ozlogin" method="post">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input name="email" class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input name="password" class="form-control" id="exampleInputPassword1" type="password" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox"> Remember Password</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                </div>
                <div class="text-center">
                    <a class="d-block small mt-3" href="/hc/ozregister">Register an Account</a>
                    <a id="frmChanger" class="d-block small" href="#" >Forgot Password?</a>
                    <a class="d-block small" href="/hc">Home Page?</a>
                </div>
            </div>
        </div>

    </div>
</div>

<script>

    document.getElementById("frmChanger").addEventListener("click", function(event){
        event.preventDefault();

        document.getElementsByClassName("card-header").innerHTML = 'Forget Password';
        document.getElementById("card-body").innerHTML = `
            <form action="/hc/ozforgot-password" method="post">
                
                <div class="form-group">
                    <label>Please enter your email</label>
                 </div>
                
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input name="email" class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                </div>
                
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        `;

    });


</script>